<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:editTextStyle">@style/editText</item>
        <item name="android:buttonStyle">@style/button</item>
        <item name="android:buttonBarButtonStyle">@style/button</item>

        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/round_btn</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="roundInfoBadge">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/round_info_badge</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="bigButton" parent="Widget.AppCompat.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="headline">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="editText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/round_info_badge</item>
    </style>

    <style name="danger">
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="success">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
